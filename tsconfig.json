    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "outDir": "./build",
    "resolveJsonModule": true
  
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "types/*.d.ts"],
